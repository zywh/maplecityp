@charset "utf-8";
/* CSS Document */
body{ font-family:"微软雅黑"; font-size:12px; margin:0; padding:0; }
img{ border:0;}

/*logo头部*/
.head{ width:980px; margin:0 auto;}
.headleft{ float:left;}
.headright{ float:right; }
.headrightone{ font-size:25px; color:#fe4e02; padding-top:10px; padding-bottom:10px; padding-right:25px; margin:15px 0; border-right:2px solid #000000; float:left; display:block;}
.headrighttwo{ font-size:25px; color:#fe4e02; padding-top:25px; float:left; display:block; padding-left:25px;}
.cl{ clear:both;}
/*登陆*/
.duibi_box{ width:980px; margin:0 auto; }

.fyxq_ptpd span{ display:block; padding-left:17px; margin-left:5px; margin-right:10px; white-space:nowrap; background:url(../images/house/wu.jpg) left center  no-repeat; color:#999999; float:left; margin-top:3px;}
.fyxq_ptpd .fyxq_ptss_you{ color:#ff4e00; background:url(../images/house/you.jpg) left center  no-repeat; }
.title{ font-weight: bold; height: 30px; }

/*底部foot*/
.foot{ background:#ff4e00 url(../images/layout/footup.jpg) center top repeat-x; padding-top:95px; *margin-top:0; padding-bottom:40px;}
.footup{ width:980px; margin:0 auto;}
.f_linkup{ text-align:center; font-size:18px; color:#FFFFFF; padding-bottom:16px; }
.f_linkdown a{ display:block; color:#FFFFFF; text-decoration:none; float:left; width:162px; padding:2px 0;}
.f_linkdown a:hover{ text-decoration:underline;}
.footdown{width:980px; margin:0 auto; text-align:center; padding-top:60px; line-height:1.6em; color:#FFFFFF;}
.footdown a{ color:#FFFFFF; text-decoration:none;}

/*底部foot*/
.topbox{ position:fixed; bottom:50px; right:10px;}
.fh{cursor: pointer;width:24px; height:24px;position:relative;}
.topone{ }
.back{ position:absolute; top:24px; left:-110px;background-color:#ff4e00; width:100px; color:#FFFFFF; padding:5px;}
.back p{ padding:0; margin:0;}
.back_lxfs p{ margin:0; padding:0;border-bottom: solid 1px #fff; padding-bottom:5px;}
.weixin_iconbg p{ text-align:center; padding-top:5px;}
.back span{ display:block; padding:3px 0;}
.back_qq{ }
.back_qq a{ display:block; color:#333333; text-decoration:none; height:25px; line-height:25px; margin:3px 0; background-color:#FFFFFF; }
.back_qq img{ float:left; padding-right:5px;}










